<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_main"
        >
        <ImageButton
            android:id="@+id/toolbar_item_configure"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/configure2"
            android:padding="0dp"
            android:tint="@color/color_Gray"
            android:scaleType="centerInside"
            android:layout_gravity="right"
            />
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/color_Black"
            android:textSize="17sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/main_drawer_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/main_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_main"
            app:tabTextColor="@color/color_Black"
            app:tabSelectedTextColor="#ff000000"
            android:layout_weight="0.92"
            android:minHeight="?attr/actionBarSize" />

        <android.support.v4.view.ViewPager
            android:id="@+id/main_frame_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.08">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
    <Button
        android:id="@+id/voiceBtn"
        android:onClick="voiceActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>

</LinearLayout>

